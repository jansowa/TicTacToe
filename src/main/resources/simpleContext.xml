<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="board" class="game.SimpleBoard"></bean>
	
	<bean id="view" class="game.SimpleGameView">
		<constructor-arg ref="board"></constructor-arg>
	</bean>
	
	<bean id="ai" class="game.BrutalAI">
		<constructor-arg ref="board"></constructor-arg>
	</bean>
	
	<bean id="dao" class="game.SimpleGameDAO">
		<constructor-arg ref="board"></constructor-arg>
	</bean>
	
	<bean id="gameApp" class="game.GameApp">
		<constructor-arg ref="view"></constructor-arg>
		<constructor-arg ref="board"></constructor-arg>
		<constructor-arg ref="ai"></constructor-arg>
		<constructor-arg ref="dao"></constructor-arg>
	</bean>
</beans>
